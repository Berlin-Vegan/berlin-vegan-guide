<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/gastro_details_padding"
    android:paddingRight="@dimen/gastro_details_padding">

    <LinearLayout
        android:layout_width="@dimen/gastro_details_left_column_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gastro_details_opening_hours_title"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="bottom"
            android:text="@string/gastro_details_opening_hours_title"
            android:textColor="@color/theme_primary"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gastro_details_opening_hours_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingStart="16dp">

    </LinearLayout>
</LinearLayout>
