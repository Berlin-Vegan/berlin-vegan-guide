<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingTop="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_dial"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/gastro_details_dial"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/theme_primary"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@mipmap/ic_phone_white_24dp"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/text_view_favorite"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/gastro_details_favorite"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/theme_primary"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@mipmap/ic_star_white_24dp"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/text_view_website"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/gastro_details_website"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/theme_primary"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@mipmap/ic_public_white_24dp"
        android:drawablePadding="8dp" />
</LinearLayout>
