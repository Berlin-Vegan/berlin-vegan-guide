<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <item name="colorAccent">@color/theme_primary_accent</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/theme_primary_text</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/theme_primary_secondary_text</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/theme_primary_text</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/theme_primary</item>
    </style>

</resources>
